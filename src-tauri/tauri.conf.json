{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "waa-shell",
  "version": "0.1.13",
  "identifier": "waa-shell",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Waa-Shell",
        "width": 800,
        "height": 600,
        "decorations": true
      },
      {
        "label": "launcher",
        "title": "Waa-Shell (Launcher)",
        "width": 800,
        "height": 100,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src * ws: wss: http: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/Square310x310Logo.png",
      "icons/Square150x150Logo.png",
      "icons/Square71x71Logo.png",
      "icons/StoreLogo.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
